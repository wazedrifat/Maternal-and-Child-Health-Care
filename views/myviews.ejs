	<link rel="stylesheet" href="/design/query.css">
  <style media="screen">
    .login_form{
      left-margin: 280px;
      height:100%;
    }
		.viewer_btn{
			background-color: #01579B;
			padding-left: 10px;
			padding-right: 10px;
		}
		.dev_btn{
			background-color: #EEFF41;
			padding-left: 10px;
			padding-right: 10px;
		}
		.admin_btn{
			background-color: #D84315;
			padding-left: 10px;
			padding-right: 10px;
		}
		.user_name{
          color: #ffffff;
        }
    .admindo{
        background-color:#00B8D4;
    }
    .writequery{
      width:400px;
      height:200px;
    }
  </style>
</head>
<body>

	<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-default fixed-top">
		<% if (btn==2)  { %>
      <a class="navbar-brand dev_btn" href=<%=link%>>DBMS</a> <span class="user_name"><%= user %></span>
    <%}  else if (btn==3)  { %>
      <a class="navbar-brand admin_btn" href=<%=link%>>DBMS</a> <span class="user_name"><%= user %></span>
    <% } else{ %>
        <a class="navbar-brand viewer_btn" href=<%=link%>>DBMS</a> <span class="user_name"><%= user %></span>
      <%}%>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto"></ul>
			<ul class="navbar-nav navbar-left">
				<li class="nav-item ">
					<a role="button" class="btn btn-dark btn-outline-primary btn-sm mycss" href=<%= link + "login-viewer" %> >Viewer</a>
				</li>
				<li class="nav-item ">
					<a role="button" class="btn btn-dark btn-outline-warning btn-sm mycss" href=<%=link + "login-developer" %>>Developer</a>
				</li>
				<li class="nav-item">
					<a role="button" class="btn btn-dark btn-outline-danger btn-sm mycss" href=<%=link + "login-admin" %>>Admin</a>
				</li>
        <li class="nav-item">
          <a role="button" class="btn btn-dark btn-outline-success btn-sm mycss" href=<%=link + "register"%>>Register</a>
        </li>
        <li class="nav-item">
          <a role="button" class="btn btn-dark btn-outline-secondary btn-sm mycss" href=<%=link + "home"%>>Logout</a>
        </li>
			</ul>
		</div>
	</nav>
	<br>




      <form action="/view-assigned" method="POST">
  			<div class="login_form container form-start col-6 ">
				<div class="jumbotron ">
          <center><h4>User's assigned Views</h4></center>

          <div class="form-group">
						<label for="role">Select User Email</label>
							<select class="form-control" id="email" name="email">

                <% for(var i=0 ; i<data3.length ; i++) { %>

        				      	<option><%=data3[i][0]%></option>

        				<% } %>

							</select>
              <br>
              <label for="role">Assign User View</label>
  							<select class="form-control" id="view" name="view">

                  <% for(var i=0 ; i<data2.length ; i++) { %>

          				      	<option><%=data2[i][0]%></option>

          				<% } %>

  							</select>
                <br>
              <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="access" id="allocate" value="allocate">
              <label class="form-check-label" for="allocate">Allocate</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="access" id="deallocate" value="deallocate">
              <label class="form-check-label" for="deallocate">De-allocate</label>
            </div>
              <br><br />

					</div>
          <br>
          <button type="submit" class="btn btn-primary">DONE</button><br>

  				</div>
					<a href=<%=link +"/admin-home"%> type="button" class="btn btn-primary btn-sm ">Return Home</a>
  			</div>

  		</form>
      <div class="table-responsive-xl table_container1">
    		<table class="table table-hover table-dark">
          <thead>
    				<tr>
    					<td scope="col"> Assigned Views  </td>
    					<td scope="col"> Email  </td>
    				</tr>
    			</thead>
    			<tbody>
    				<% for(var i=0 ; i<data1.length ; i++) { %>
    				<tr>
    					<% for (var j = 0; j <data1[i].length; j++) { %>
    					<td> <%= data1[i][j] %> </td>
    					<% } %>
              	</tr>
    				<% } %>
    			</tbody>
    		</table>
    	</div>




	<script src="/design/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="/design/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="/design/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>
